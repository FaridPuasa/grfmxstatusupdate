                        <th class="header">Date Time Submission</th>
                        <th class="header">Phone Number</th>
                        <th class="header">IC Picture Front</th>
                        <th class="header">IC Picture Back</th>
                    </tr>
                </thead>

                <tbody>
                    <!-- Iterate through the orders and display the data -->
                    <% waorders.forEach(function(waorder, index) { %>
                        <tr>
                            <td>
                                <%= waorder.dateTimeSubmission %>
                            </td>
                            <td>
                                <%= waorder.receiverPhoneNumber %>
                            </td>
                            <td>
                                <button class="btn btn-primary show-btn"
                                    data-target="#modalFront<%= index %>">Show</button>
                            </td>
                            <td>
                                <button class="btn btn-primary show-btn"
                                    data-target="#modalBack<%= index %>">Show</button>
                            </td>
                        </tr>

                        <!-- Modal for IC Picture Front -->
                        <div class="modal" id="modalFront<%= index %>">
                            <div class="modal-content">
                                <span class="close" data-target="#modalFront<%= index %>">&times;</span>
                                <img src="<%= waorder.icPictureFront %>" alt="IC Front"
                                    style="width: 90%; height: auto;">
                            </div>
                        </div>

                        <!-- Modal for IC Picture Back -->
                        <div class="modal" id="modalBack<%= index %>">
                            <div class="modal-content">
                                <span class="close" data-target="#modalBack<%= index %>">&times;</span>
                                <img src="<%= waorder.icPictureBack %>" alt="IC Back" style="width: 90%; height: auto;">
                            </div>
                        </div>
                        <% }); %>
                </tbody>
            </table>
