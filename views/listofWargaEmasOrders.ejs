<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Warga Emas Orders</title>
    <!-- Include necessary CSS and JavaScript libraries (similar to listofpharmacyPod.ejs) -->
    <!-- Make sure to include Bootstrap, jQuery, and DataTables -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
    <style>
        /* Custom CSS for your page */
        .navbar-nav.flex-row {
            flex-direction: row !important;
        }

        /* Make the navbar background transparent */
        .navbar {
            background-color: transparent;
        }

        /* Add background color to the container */
        .container-bg {
            background-color: #333;
            /* You can use your desired background color here */
        }

        /* Add margin to the navigation links */
        .navbar-nav.flex-row .nav-item {
            margin-right: 10px;
        }

        /* Add margin to the submit button */
        .btn-submit {
            margin-top: 10px;
            /* Adjust the margin-top as needed */
        }

        th {
            background-color: #f2f2f2;
            font-size: 15px;
            text-align: center;
            /* Center-align table headers horizontally */
        }

        td {
            font-size: 15px;
            text-align: center;
            /* Center-align table data cells horizontally */
        }

        table {
            width: 80%;
            /* Set the desired width for the table */
            margin: 0 auto;
            /* Center the table horizontally */
            vertical-align: middle;
            /* Center-align table contents vertically */
        }

        /* The Modal (hidden by default) */
        .modal {
            display: none;
            /* Hidden by default */
            position: fixed;
            /* Stay in place */
            z-index: 1;
            /* Sit on top */
            left: 0;
            top: 0;
            width: 100%;
            /* Full width */
            height: 100%;
            /* Full height */
            background-color: rgba(0, 0, 0, 0.8);
            /* Black background with opacity */
            justify-content: center;
            align-items: center;
        }

        /* Modal Content */
        .modal-content {
            position: relative;
            margin: auto;
            padding: 20px;
            width: 90%;
            /* Full width */
            max-width: 800px;
            /* Maximum width */
            text-align: center;
        }

        /* The Close Button */
        .close {
            position: absolute;
            top: 10px;
            right: 25px;
            color: #fff;
            /* Ensures the color is white */
            font-size: 35px;
            font-weight: bold;
            cursor: pointer;
            visibility: visible;
            /* Always visible */
            opacity: 1;
            /* Fully opaque */
            transition: opacity 0.3s;
            /* Add smooth transition if you want */
        }

        /* Optional: Add hover effect */
        .close:hover {
            opacity: 0.7;
            /* Slightly transparent when hovered */
        }

        .logo {
  height: 40px;
  width: auto;
  max-height: 40px;
}

@media (max-width: 768px) {
  .logo {
    height: 30px;
    max-height: 30px;
  }
}

@media (max-width: 480px) {
  .logo {
    height: 25px;
    max-height: 25px;
  }
}
    </style>

    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/smallgorushlogo.png">
  <link rel="icon" href="/images/smallgorushlogo.png" type="image/x-icon">
<link rel="icon" href="/images/smallgorushlogo.png" type="image/png">
<link rel="apple-touch-icon" href="/images/favicon.png">
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <!-- Create a similar navigation bar as in listofpharmacyPod.ejs -->
            <%- include('partials/navbar') %>
        </div>
    </div>

    <main class="mt-4" style="width: 100%;">
        <h1 class="text-center mt-4">All Warga Emas Orders (<%= totalRecords %>)</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="orderTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">Date Time Submission</th>
                        <th class="header">Phone Number</th>
                        <th class="header">IC Picture Front</th>
                        <th class="header">IC Picture Back</th>
                    </tr>
                </thead>

                <tbody>
                    <!-- Iterate through the orders and display the data -->
                    <% waorders.forEach(function(waorder, index) { %>
                        <tr>
                            <td>
                                <%= waorder.dateTimeSubmission %>
                            </td>
                            <td>
                                <%= waorder.receiverPhoneNumber %>
                            </td>
                            <td>
                                <button class="btn btn-primary show-btn"
                                    data-target="#modalFront<%= index %>">Show</button>
                            </td>
                            <td>
                                <button class="btn btn-primary show-btn"
                                    data-target="#modalBack<%= index %>">Show</button>
                            </td>
                        </tr>

                        <!-- Modal for IC Picture Front -->
                        <div class="modal" id="modalFront<%= index %>">
                            <div class="modal-content">
                                <span class="close" data-target="#modalFront<%= index %>">&times;</span>
                                <img src="<%= waorder.icPictureFront %>" alt="IC Front"
                                    style="width: 90%; height: auto;">
                            </div>
                        </div>

                        <!-- Modal for IC Picture Back -->
                        <div class="modal" id="modalBack<%= index %>">
                            <div class="modal-content">
                                <span class="close" data-target="#modalBack<%= index %>">&times;</span>
                                <img src="<%= waorder.icPictureBack %>" alt="IC Back" style="width: 90%; height: auto;">
                            </div>
                        </div>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>

    <!-- Include the necessary JavaScript libraries for DataTables and other custom scripts if needed -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable for the order table
            const table = $('#orderTable').DataTable({
                "ordering": false,  // Disable client-side sorting
                "iDisplayLength": 100,  // Set the default number of entries to 100
                "dom": 'Bfrtip', // Add buttons to the DOM
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print' // Buttons for copy, CSV, Excel, PDF, and print
                ]
            });
        });
    </script>

    <!-- JavaScript for Modal Functionality -->
    <script>
        document.querySelectorAll('.show-btn').forEach(button => {
            button.addEventListener('click', function () {
                const modalId = this.getAttribute('data-target');
                const modal = document.querySelector(modalId);
                modal.style.display = 'flex';
            });
        });

        document.querySelectorAll('.modal .close').forEach(closeBtn => {
            closeBtn.addEventListener('click', function () {
                const modalId = this.getAttribute('data-target');
                const modal = document.querySelector(modalId);
                modal.style.display = 'none';
            });
        });

        // Close modal when clicking outside the modal content
        window.onclick = function (event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });
        };
    </script>
</body>

</html>