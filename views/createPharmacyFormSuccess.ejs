</head>

<body>
    <div class="container-bg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <%- include('partials/navbar') %>
                </div>
            </div>
        </div>
    </div>
    <div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Date of Form</th>
                    <th>No.</th>
                    <th>Go Rush Status</th>
                    <th>Tracking Number</th>
                    <th>Patient Name</th>
                    <th>Address</th>
                    <th>Area</th>
                    <th>BruHIMs Number</th>
                    <th>IC No.</th>
                    <th>Appointment Place</th>
                    <th>Phone Number</th>
                    <th>Additional Phone Number</th>
                    <th>Delivery Code</th>
                    <th>Remark</th>
                </tr>
            </thead>
            <tbody>
                <% let prefix='' ; %>
                    <% if ((mohForm==='STD' )||(mohForm==='EXP' )||(mohForm==='IMM' )) { %>
                        <% if (batchChoice==='1' ) { %>
                            <% var startCounter=1; %>
                                <% } %>
                                    <% if (batchChoice>='2' ) { %>
                                        <% var startCounter=parseInt(b2Start); %>
                                            <% } %>
                                                <% } %>

                                                    <% if ((mohForm==='TTG' )||(mohForm==='KB' )) { %>
                                                        <% var startCounter=parseInt(b2Start); %>
                                                            <% } %>

                                                                <% if (mohForm==='STD' ) { %>
                                                                    <% prefix='S' ; %>
                                                                        <% } else if (mohForm==='EXP' ) { %>
                                                                            <% prefix='E' ; %>
                                                                                <% } else if (mohForm==='IMM' ) { %>
                                                                                    <% prefix='IMM' ; %>
                                                                                        <% } else if (mohForm==='TTG' )
                                                                                            { %>
                                                                                            <% prefix='T' ; %>
                                                                                                <% } else if
                                                                                                    (mohForm==='KB' ) {
                                                                                                    %>
                                                                                                    <% prefix='K' ; %>
                                                                                                        <% } %>

                                                                                                            <% orders.forEach(function(order)
                                                                                                                { %>
                                                                                                                <tr>
                                                                                                                    <td>
                                                                                                                        <%= dateOfForm
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= prefix
                                                                                                                            +
                                                                                                                            (startCounter++)
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td
                                                                                                                        contenteditable="true">
                                                                                                                    </td>
                                                                                                                    <td id="trackingNumber"
                                                                                                                        class="selectable-content">
                                                                                                                        <%= order.doTrackingNumber
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.receiverName
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.receiverAddress
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.area
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.patientNumber
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td
                                                                                                                        style="mso-number-format:'\@';">
                                                                                                                        <%= order.icPassNum
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.appointmentPlace
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.receiverPhoneNumber
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.additionalPhoneNumber
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.deliveryTypeCode
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                    <td>
                                                                                                                        <%= order.remarks
                                                                                                                            %>
                                                                                                                    </td>
                                                                                                                </tr>
                                                                                                                <% });
                                                                                                                    %>
            </tbody>
        </table>

        <div class="button-container text-center">
            <button id="saveButton" class="btn btn-success">Save Form</button>
            <button id="exportExcelButton" class="btn btn-success">Export Excel</button>
            <button id="backButton" class="btn btn-primary" onclick="history.back()">Back to List</button>
        </div>
    </div>

    <!-- Include the necessary JavaScript libraries for DataTables and other custom scripts if needed -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            document.getElementById('exportExcelButton').disabled = true;

            // Retrieve the first and last values from the No. column
            const noColumn = document.querySelectorAll('table tbody tr td:nth-child(2)'); // 3 is the column index (0-based)
            let firstNo = ''; // Initialize to an empty string
            let lastNo = '';

            noColumn.forEach((td, index) => {
                if (index === 0) {
                    firstNo = td.textContent;
                }
                lastNo = td.textContent; // Update lastNo for every iteration
            });

            const batchNumber = '<%= batchChoice %>';
            firstNo = firstNo.trim(); // Remove leading/trailing spaces
            lastNo = lastNo.trim(); // Remove leading/trailing spaces
            const dateOfForm = '<%= dateOfForm %>'; // Get the dateOfForm from the EJS template

            if ('<%= mohForm %>' === 'STD') {
                var prefix = 'STD';
            } else if ('<%= mohForm %>' === 'EXP') {
                var prefix = 'EXP';
            } else if ('<%= mohForm %>' === 'IMM') {
                var prefix = 'IMM';
            } else if ('<%= mohForm %>' === 'TTG') {
                var prefix = 'TUT';
            } else if ('<%= mohForm %>' === 'KB') {
                var prefix = 'KB';
            } else {
                var prefix = ''; // Default prefix when mohform is not recognized
            }

            // Construct the formName with the determined prefix
            const formName = `${prefix} B${batchNumber} ${firstNo}-${lastNo} ${dateOfForm}`;

            document.getElementById("exportExcelButton").addEventListener("click", function () {
                // Create a new Excel workbook
                const wb = XLSX.utils.book_new();

                // Extract the table data
                const table = document.querySelector('table');
                const ws = XLSX.utils.table_to_sheet(table);

                // Force column 9 (IC No.) to be text and keep leading zeros
                const range = XLSX.utils.decode_range(ws['!ref']);

                for (let R = range.s.r + 1; R <= range.e.r; ++R) {
                    const cellAddress = { c: 8, r: R }; // Column 9 (IC No.), 0-based index
                    const cellRef = XLSX.utils.encode_cell(cellAddress);

                    const cell = ws[cellRef];
                    if (cell && typeof cell.v !== 'undefined') {
                        cell.t = 's'; // Mark as string
                        cell.v = cell.v.toString().padStart(8, '0'); // Ensure 8-digit IC with leading 0
                    }
                }

                // Add the worksheet to the workbook
                XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

                // Generate a blob containing the Excel data
                const filename = formName + '.xlsx';
                XLSX.writeFile(wb, filename);
            });

            // Add an event listener to the "Save" button
            document.getElementById('saveButton').addEventListener('click', function () {
                var trackingNumbers = [];

                // Iterate through the table rows and push the tracking numbers into the array
                var trackingNumberCells = document.querySelectorAll('td#trackingNumber');
                trackingNumberCells.forEach(function (cell) {
                    trackingNumbers.push(cell.textContent.trim());
                });

                // Get the number of forms (table rows)
                const numberOfForms = document.querySelectorAll('table tbody tr').length;

                if (confirm('Are you sure you want to save the Form data?')) {
                    // User confirmed the save action

                    // Use the trackingNumbers array here
                    trackingNumbers.forEach(function (trackingNumber) {
                        // Perform the necessary actions with each tracking number
                        console.log('Tracking Number: ' + trackingNumber);
                    });

                    // Clone the HTML content and remove the elements you don't want to save
                    const clonedDocument = document.cloneNode(true);

                    // Remove the buttons
                    const buttonsToRemove = clonedDocument.querySelectorAll('#exportExcelButton, #backButton, #saveButton');
                    buttonsToRemove.forEach(button => button.remove());

                    // Remove the container-bg
                    const containerBgToRemove = clonedDocument.querySelector('.container-bg');
                    if (containerBgToRemove) {
                        containerBgToRemove.remove();
                    }

                    const htmlContent = clonedDocument.documentElement.outerHTML;

                    fetch('/save-form', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            formName: formName,
                            formDate: dateOfForm, // Set formDate to dateOfForm
                            batchNo: batchNumber, // Set batchNo to batchChoice
                            startNo: firstNo, // Set startNo to firstNo
                            endNo: lastNo, // Set endNo to lastNo
                            htmlContent: htmlContent,
                            mohForm: prefix,
                            trackingNumbers: trackingNumbers,
                            numberOfForms: numberOfForms
                        })
                    })
                        .then(response => {
                            console.log('Response:', response);
                            if (response.ok) {
                                // Disable the "Save" button
                                document.getElementById('saveButton').disabled = true;
                                // Enable the "Export Excel" button
                                document.getElementById('exportExcelButton').disabled = false;
                                alert('Form data saved successfully!');
                            } else {
                                alert('Failed to save Form data.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                }
            });
        });
    </script>
</body>

</html>