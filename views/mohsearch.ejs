<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOH Search</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
    <style>
        .navbar-nav.flex-row {
            flex-direction: row !important;
        }

        .navbar {
            background-color: transparent;
        }

        .container-bg {
            background-color: #333;
        }

        .navbar-nav.flex-row .nav-item {
            margin-right: 10px;
        }

        .bg-red {
            background-color: rgb(255, 110, 110) !important;
        }

        .bg-yellow {
            background-color: yellow !important;
        }

        .bg-blue {
            background-color: rgb(152, 184, 255) !important;
        }

        .bg-green {
            background-color: rgb(137, 253, 126) !important;
        }

        .btn-submit {
            margin-top: 10px;
        }

        th,
        td {
            font-size: 15px;
            text-align: center;
        }

        table {
            width: 100%;
            margin: 0 auto;
        }

        .card {
            margin-bottom: 20px;
        }

        .logo {
  height: 40px;
  width: auto;
  max-height: 40px;
}

@media (max-width: 768px) {
  .logo {
    height: 30px;
    max-height: 30px;
  }
}

@media (max-width: 480px) {
  .logo {
    height: 25px;
    max-height: 25px;
  }
}
    </style>

    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/smallgorushlogo.png">
  <link rel="icon" href="/images/smallgorushlogo.png" type="image/x-icon">
<link rel="icon" href="/images/smallgorushlogo.png" type="image/png">
<link rel="apple-touch-icon" href="/images/favicon.png">
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <%- include('partials/navbar') %>
        </div>
    </div>
    <div class="container mt-5">
        <h1 class="text-center mt-4">MOH Search</h1>
        <form action="/mohsearch" method="post">
            <div class="form-group">
                <label for="patientNumber">Patient Number</label>
                <input type="text" id="patientNumber" name="patientNumber" class="form-control"
                    value="<%= searchQuery.patientNumber %>">
            </div>
            <div class="form-group">
                <label for="icPassNum">IC/Passport Number</label>
                <input type="text" id="icPassNum" name="icPassNum" class="form-control"
                    value="<%= searchQuery.icPassNum %>">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div id="results" class="mt-4">
        <table class="table" id="orderTable">
            <thead>
                <tr>
                    <th>Tracking No.</th>
                    <th>Customer Name</th>
                    <th>Current Status</th>
                    <th>Latest Reason</th>
                    <th>Last Update</th>
                    <th>Order Created</th>
                    <th>Phone No.</th>
                    <th>Additional Phone No.</th>
                    <th>Address</th>
                    <th>Area</th>
                    <th>Patient No.</th>
                    <th>IC/Passport No.</th>
                    <th>Appointment Place</th>
                    <th>Job Type</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody id="results-body">
                <% if (orders.length===0) { %>
                    <tr>
                        <td colspan="15" class="text-center">No records found</td>
                    </tr>
                    <% } else { %>
                        <% orders.forEach(order=> { %>
                            <tr>
                                <td>
                                    <%= order.doTrackingNumber %>
                                </td>
                                <td>
                                    <%= order.receiverName %>
                                </td>
                                <td>
                                    <%= order.currentStatus %>
                                </td>
                                <td>
                                    <%= order.latestReason %>
                                </td>
                                <td>
                                    <%= moment(order.lastUpdateDateTime).utcOffset(8).format('DD-MM-YYYY h:mm a') %>
                                </td>
                                <td>
                                    <%= order.dateTimeSubmission %>
                                </td>
                                <td>
                                    <%= order.receiverPhoneNumber %>
                                </td>
                                <td>
                                    <%= order.additionalPhoneNumber %>
                                </td>
                                <td>
                                    <%= order.receiverAddress %>
                                </td>
                                <td>
                                    <%= order.area %>
                                </td>
                                <td>
                                    <%= order.patientNumber %>
                                </td>
                                <td>
                                    <%= order.icPassNum %>
                                </td>
                                <td>
                                    <%= order.appointmentPlace %>
                                </td>
                                <td>
                                    <%= order.deliveryTypeCode %>
                                </td>
                                <td>
                                    <%= order.remarks %>
                                </td>
                            </tr>
                            <% }); %>
                                <% } %>
            </tbody>
        </table>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable for the order table
            const table = $('#orderTable').DataTable({
                "ordering": false,  // Disable client-side sorting
                "iDisplayLength": 100,  // Set the default number of entries to 100
                "dom": 'Bfrtip', // Add buttons to the DOM
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print' // Buttons for copy, CSV, Excel, PDF, and print
                ]
            });
        });
    </script>
</body>

</html>