<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <style>
        .navbar-nav.flex-row {
            flex-direction: row !important;
        }

        .navbar {
            background-color: transparent;
        }

        .container-bg {
            background-color: #333;
        }

        .navbar-nav.flex-row .nav-item {
            margin-right: 10px;
        }

        .btn-submit {
            margin-top: 10px;
        }

        th,
        td {
            font-size: 15px;
            text-align: center;
        }

        table {
            width: 100%;
            margin: 0 auto;
        }

        .card {
            margin-bottom: 20px;
        }

        .logo {
  height: 40px;
  width: auto;
  max-height: 40px;
}

@media (max-width: 768px) {
  .logo {
    height: 30px;
    max-height: 30px;
  }
}

@media (max-width: 480px) {
  .logo {
    height: 25px;
    max-height: 25px;
  }
}
    </style>

    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/smallgorushlogo.png">
  <link rel="icon" href="/images/smallgorushlogo.png" type="image/x-icon">
<link rel="icon" href="/images/smallgorushlogo.png" type="image/png">
<link rel="apple-touch-icon" href="/images/favicon.png">
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <%- include('partials/navbar') %>
        </div>
    </div>

    <body>
        <h1 class="text-center mt-4">Create User</h1>
        <% if (typeof errors !=='undefined' ) { %>
            <ul>
                <% errors.forEach(function(error) { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }); %>
            </ul>
            <% } %>
                <form action="/createUser" method="post">
                    <div>
                        <label for="name">Name:</label>
                        <input type="text" name="name" required>
                    </div>
                    <div>
                        <label for="email">Email:</label>
                        <input type="email" name="email" required>
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" name="password" required>
                    </div>
                    <div>
                        <label for="role">Role:</label>
                        <select name="role" required>
                            <option value="admin">Admin</option>
                            <option value="manager">Manager</option>
                            <option value="cs">CS</option>
                            <option value="warehouse">Warehouse</option>
                            <option value="finance">Finance</option>
                            <option value="moh">MOH</option>
                        </select>
                    </div>
                    <button type="submit">Create User</button>
                </form>

                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>