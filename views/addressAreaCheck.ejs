                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                <% } %>
            </ul>
        </nav>
                </div>
            </div>
        </div>
    </div>
    <main class="container mt-4">
        <h1 class="text-center mt-4">Address Area Checker</h1>
        <form action="/addressAreaCheck" method="post" id="addressAreaForm">
            <textarea name="customerAddresses" id="customerAddresses" rows="10" cols="100" class="col-12"></textarea>
            <br>
            <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
        </form>

        <!-- Loading animation and message -->
        <div id="loading" class="text-center" style="display: none;">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p>Loading...</p>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Get references to the form, submit button, and loading element
        const addressAreaForm = document.getElementById('addressAreaForm');
        const submitButton = document.getElementById('submitButton');
        const loading = document.getElementById('loading');

        // Function to disable the submit button when it's clicked and show the loading animation
        function disableSubmitButton(event) {
            submitButton.disabled = true;
            loading.style.display = 'block'; // Show the loading animation
            // You can add code here to submit the form data via AJAX if needed

            // Allow the form to submit after a brief delay (e.g., 1 second)
            setTimeout(() => {
                addressAreaForm.submit();
            }, 1000);
        }

        // Attach the disableSubmitButton function to the "submit" event of the form
        addressAreaForm.addEventListener('submit', disableSubmitButton);
    </script>

</body>

</html>