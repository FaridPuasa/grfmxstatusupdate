<body>
    <div class="container-bg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand mr-auto" href="/">
                <h2>Go Rush</h2>
            </a>
            <ul class="navbar-nav flex-row">
                <% if (['finance', 'warehouse', 'cs' , 'dispatcher' , 'manager' , 'admin' ].includes(user.role)) { %>
