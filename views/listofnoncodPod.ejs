                        <a class="nav-link" href="/login">Login</a>
                    </li>
                <% } %>
            </ul>
        </nav>
                </div>
            </div>
        </div>
    </div>

    <main class="container mt-4">
        <h1 class="text-center mt-4">List of EWE/PDU/MGLOBAL PODs</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="podTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">POD Name</th>
                        <th class="header">Product</th>
                        <th class="header">Dispatcher</th>
                        <th class="header">Area</th>
                        <th class="header">Delivery Date</th>
                        <th class="header">No. of Deliveries</th>
                        <th class="header">POD Creator</th>
                        <th class="header">POD Date</th>
                        <th class="header">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </main>

    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#podTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/api/listofnoncodPod",
                    "type": "GET"
                },
                "columns": [
                    {
                        "data": "_id",
                        "render": function (data, type, row) {
                            return `<a href="/podnoncodDetail/${data}">${row.podName}</a>`;
                        }
                    },
                    {
                        "data": "product",
                        "render": function (data) {
                            return data === "NONCOD POD" ? "EWE/PDU/MGLOBAL POD" : data;
                        }
                    },
                    { "data": "dispatcher" },
                    { "data": "area" },
                    { "data": "deliveryDate" },
                    { "data": "rowCount" },
                    { "data": "podCreator" },
                    { "data": "podDate" },
                    {
                        "data": "_id",
                        "orderable": false,
                        "searchable": false,
                        "render": function (data) {
                            return `
                            <a href="/editNoncodPod/${data}" class="btn btn-primary btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('${data}')">Delete</button>
                        `;
                        }
                    }
                ],
                "order": [[0, "desc"]] // Default sort by newest first
            });
        });

        function confirmDelete(podId) {
            if (confirm("Are you sure you want to delete this record?")) {
                window.location.href = "/deleteNONCODPod/" + podId;
            }
        }
    </script>

</body>

</html>