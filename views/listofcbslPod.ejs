    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/smallgorushlogo.png">
  <link rel="icon" href="/images/smallgorushlogo.png" type="image/x-icon">
<link rel="icon" href="/images/smallgorushlogo.png" type="image/png">
<link rel="apple-touch-icon" href="/images/favicon.png">
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                   <%- include('partials/navbar') %>
                </div>
            </div>
        </div>
    </div>

    <main class="container mt-4">
        <h1 class="text-center mt-4">List of Cross Border Service (Limbang) PODs</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="podTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">POD Name</th>
                        <th class="header">Dispatcher</th>
                        <th class="header">Area</th>
                        <th class="header">Delivery Date</th>
                        <th class="header">No. of Deliveries</th>
                        <th class="header">POD Creator</th>
                        <th class="header">POD Date</th>
                        <th class="header">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </main>

    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#podTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/api/listofcbslPod",
                    "type": "GET"
                },
                "columns": [
                    {
                        "data": "_id",
                        "render": function (data, type, row) {
                            return `<a href="/podcbslDetail/${data}">${row.podName}</a>`;
                        }
                    },
                    { "data": "dispatcher" },
                    { "data": "area" },
                    { "data": "deliveryDate" },
                    { "data": "rowCount" },
                    { "data": "podCreator" },
                    { "data": "podDate" },
                    {
                        "data": "_id",
                        "orderable": false,
                        "searchable": false,
                        "render": function (data) {
                            return `
                            <a href="/editCbslPod/${data}" class="btn btn-primary btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm" onclick="confirmDelete('${data}')">Delete</button>
                        `;
                        }
                    }
                ],
                "order": [[0, "desc"]] // Default sort by latest _id
            });
        });

        function confirmDelete(podId) {
            if (confirm("Are you sure you want to delete this record?")) {
                window.location.href = "/deleteCBSLPod/" + podId;
            }
        }
    </script>

</body>

</html>