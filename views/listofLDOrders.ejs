    <main class="mt-4" style="width: 100%;">
        <h1 class="text-center mt-4">List of Local Delivery Orders (<%= totalRecords %>)</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="orderTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">Tracking No.</th>
                        <th class="header">Sender Name</th>
                        <th class="header">Sender Phone No.</th>
                        <th class="header">Receiver Name</th>
                        <th class="header">Receiver Phone No.</th>
                        <th class="header">Current Status</th>
                        <th class="header">Assigned To</th>
                        <th class="header">Job Date</th>
                        <th class="header">Attempt No.</th>
                        <th class="header">Latest Reason</th>
                        <th class="header">Warehouse Entry Date</th>
                        <th class="header">Age in Warehouse</th>
                        <th class="header">Last Update</th>
                        <th class="header">Last Update By</th>
                        <th class="header">Job Created</th>
                        <th class="header">Receiver Address</th>
                        <th class="header">Area</th>
                        <th class="header">Delivery or Pickup</th>
                        <th class="header">Job Method</th>
                        <th class="header">Item Description</th>
                        <th class="header">Item Type</th>
                        <th class="header">Weight</th>
                        <th class="header">Pickup Address</th>
                        <th class="header">Pickup Date</th>
                        <th class="header">Payment Method</th>
                        <th class="header">Payment Amount</th>
                        <th class="header">Bill To</th>
                        <th class="header">Remarks</th>
                    </tr>
                </thead>

                <tbody>
                    <!-- Iterate through the orders and display the data -->
                    <% orders.forEach(function(order) { %>
                        <tr>
                            <td>
                                <%= order.doTrackingNumber %>
                            </td>
                            <td>
                                <%= order.senderName %>
                            </td>
                            <td>
                                <%= order.senderPhoneNumber %>
                            </td>
                            <td>
                                <%= order.receiverName %>
                            </td>
                            <td>
                                <%= order.receiverPhoneNumber %>
                            </td>
                            <td>
                                <%= order.currentStatus %>
                            </td>
                            <td>
                                <%= order.assignedTo %>
                            </td>
                            <td>
                                <%= order.jobDate %>
                            </td>
                            <td>
                                <%= order.attempt %>
                            </td>
                            <td>
                                <%= order.latestReason %>
                            </td>
                            <td>
                                <%= moment(order.warehouseEntryDateTime).isValid() ? moment(order.warehouseEntryDateTime).utcOffset(8).format('DD-MM-YYYY') : "N/A" %>
                            </td>
                            <td>
                                <% if (order.currentStatus !=="Completed" ) { %>
                                    <% if (order.warehouseEntry==="No" ) { %>
                                        0
                                        <% } else { %>
                                            <% const entryDate=new Date(order.warehouseEntryDateTime); %>
                                                <% const currentDate=new Date(); %>
                                                    <% const ageInMilliseconds=currentDate - entryDate; %>
                                                        <% const ageInDays=Math.floor(ageInMilliseconds / (1000 * 60 *
                                                            60 * 24)); %>
                                                            <%= ageInDays %>
                                                                <% } %>
                                                                    <% } else { %>
                                                                        <!-- Add an empty cell or any placeholder when the status is "Completed" -->
                                                                        <!-- Adjust the colspan to match the number of columns in the table -->
                                                                        <% } %>
                            </td>
                            <td>
                                <%= moment(order.lastUpdateDateTime).utcOffset(8).format('DD-MM-YYYY h:mm a') %>
                            </td>
                            <td>
                                <%= order.lastUpdatedBy %>
                            </td>
                            <td>
                                <%= order.dateTimeSubmission %>
                            </td>
                            <td>
                                <%= order.receiverAddress %>
                            </td>
                            <td>
                                <%= order.area %>
                            </td>
                            <td>
                                <%= order.ldPickupOrDelivery %>
                            </td>
                            <td>
                                <%= order.jobMethod %>
                            </td>
                            <td>
                                <%= order.items[0].description %>
                            </td>
                            <td>
                                <%= order.ldProductType %>
                            </td>
                            <td>
                                <%= order.ldProductWeight %>
                            </td>
                            <td>
                                <%= order.pickupAddress %>
                            </td>
                            <td>
                                <%= order.pickupDate %>
                            </td>
                            <td>
                                <%= order.paymentMethod %>
                            </td>
                            <td>
                                <%= order.paymentAmount %>
                            </td>
                            <td>
                                <%= order.billTo %>
                            </td>
                            <td>
                                <%= order.remarks %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>

