<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Pharmacy Forms</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Include DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <style>
        /* Custom CSS for your page */
        .navbar-nav.flex-row {
            flex-direction: row !important;
        }

        /* Make the navbar background transparent */
        .navbar {
            background-color: transparent;
        }

        /* Add background color to the container */
        .container-bg {
            background-color: #333;
            /* You can use your desired background color here */
        }

        /* Add margin to the navigation links */
        .navbar-nav.flex-row .nav-item {
            margin-right: 10px;
        }

        /* Add margin to the submit button */
        .btn-submit {
            margin-top: 10px;
            /* Adjust the margin-top as needed */
        }

        th {
            background-color: #f2f2f2;
            font-size: 15px;
            text-align: center;
            /* Center-align table headers horizontally */
        }

        td {
            font-size: 15px;
            text-align: center;
            /* Center-align table data cells horizontally */
        }

        table {
            width: 80%;
            /* Set the desired width for the table */
            margin: 0 auto;
            /* Center the table horizontally */
            vertical-align: middle;
            /* Center-align table contents vertically */
        }
    </style>
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <%- include('partials/navbar') %>
                </div>
            </div>
        </div>
    </div>

    <main class="container mt-4">
        <h1 class="text-center mt-4">List of Pharmacy Forms</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="formTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">Form Name</th>
                        <th class="header">Form For</th>
                        <th class="header">Created By</th>
                        <th class="header">Form Date</th>
                        <th class="header">Batch No</th>
                        <th class="header">No. of Forms</th>
                        <th class="header">First No.</th>
                        <th class="header">Last No.</th>
                        <th class="header">Actions</th> <!-- Add Actions column -->
                    </tr>
                </thead>
                <tbody>
                    <% forms.forEach(function(form) { %>
                        <tr>
                            <td>
                                <a href="/formpharmacyDetail/<%= form._id %>">
                                    <%= form.formName %>
                                </a>
                            </td>
                            <td>
                                <%= form.mohForm %>
                            </td>
                            <td>
                                <%= form.formCreator %>
                            </td>
                            <td>
                                <%= form.formDate %>
                            </td>
                            <td>
                                <%= form.batchNo %>
                            </td>
                            <td>
                                <%= form.numberOfForms %>
                            </td>
                            <td>
                                <%= form.startNo %>
                            </td>
                            <td>
                                <%= form.endNo %>
                            </td>
                            <!-- Add an Edit button with a link to the edit route -->
                            <td>
                                <a href="/editPharmacyForm/<%= form._id %>" class="btn btn-primary btn-sm">Edit</a>
                                <button class="btn btn-danger btn-sm"
                                    onclick="confirmDelete('<%= form._id %>')">Delete</button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>

    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            const table = $('#formTable').DataTable({
                "ordering": false,  // Disable client-side sorting
                "iDisplayLength": 10  // Set the default number of entries to 100
            });
        });
    </script>

    <!-- Script for delete confirmation -->
    <script>
        function confirmDelete(formId) {
            if (confirm("Are you sure you want to delete this record?")) {
                window.location.href = "/deletePharmacyForm/" + formId; // Redirect to delete route
            }
        }
    </script>

</body>

</html>