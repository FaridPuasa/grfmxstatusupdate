<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <style>
        .navbar-nav.flex-row {
            flex-direction: row !important;
        }

        .navbar {
            background-color: transparent;
        }

        .container-bg {
            background-color: #333;
        }

        .navbar-nav.flex-row .nav-item {
            margin-right: 10px;
        }

        .btn-submit {
            margin-top: 10px;
        }

        th,
        td {
            font-size: 15px;
            text-align: center;
        }

        table {
            width: 100%;
            margin: 0 auto;
        }

        .card {
            margin-bottom: 20px;
        }

        .logo {
  height: 40px;
  width: auto;
  max-height: 40px;
}

@media (max-width: 768px) {
  .logo {
    height: 30px;
    max-height: 30px;
  }
}

@media (max-width: 480px) {
  .logo {
    height: 25px;
    max-height: 25px;
  }
}

        .login-logo {
    height: 40px; 
    width: auto; 
    vertical-align: middle; /* aligns logo with text */
}
    </style>

    <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/smallgorushlogo.png">
  <link rel="icon" href="/images/smallgorushlogo.png" type="image/x-icon">
<link rel="icon" href="/images/smallgorushlogo.png" type="image/png">
<link rel="apple-touch-icon" href="/images/favicon.png">
</head>

<body class="bg-light">
    <div class="container-bg">
        <div class="container">
            <!-- Logged-out navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container d-flex align-items-center">

    <!-- Mobile logo -->
    <a class="navbar-brand d-lg-none" href="/">
      <img src="/images/logoportalwhite.png" alt="Go Rush Logo" class="logo img-fluid">
    </a>

    <!-- Desktop logo centered -->
<a class="navbar-brand mr-auto d-none d-lg-block" href="/">
  <img src="/images/logoportalwhite.png" alt="Go Rush Logo" class="logo img-fluid">
</a>

    <!-- Desktop login (right) -->
    <ul class="navbar-nav ml-auto d-none d-lg-flex">
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>
    </ul>

    <!-- Mobile login (right, no burger) -->
    <ul class="navbar-nav d-lg-none ml-auto">
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>
    </ul>

  </div>
</nav>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">
    Log in to <img src="/images/logoportalblack.png" alt="Go Rush Logo" class="login-logo"></h1>
                        <% if (typeof errors !=='undefined' ) { %>
                            <ul class="list-unstyled text-danger">
                                <% errors.forEach(function(error) { %>
                                    <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <% errors.forEach(function(error) { %>
            <div><%= error %></div>
        <% }); %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>
                                <% }); %>
                            </ul>
                        <% } %>
                        <form action="/login" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://unpkg.com/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
