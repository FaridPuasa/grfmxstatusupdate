    <script>
        $(document).ready(function () {
            // Initialize DataTable for the order table
            const table = $('#orderTable').DataTable({
                "ordering": false,  // Disable client-side sorting
                "iDisplayLength": 100,  // Set the default number of entries to 100
                "dom": 'Bfrtip', // Add buttons to the DOM
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print' // Buttons for copy, CSV, Excel, PDF, and print
                ]
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Check the current day using Moment.js
            const currentDay = moment().day(); // Returns the day of the week (0 for Sunday, 1 for Monday, etc.)

            // Hide the container div if the day is Friday (5) or Sunday (0)
            if (currentDay != 5 && currentDay != 0) {
                $('#pharmacyFormBox').fadeIn();
            }

            // Initialize DataTable for the order table
            const table = $('#orderTable').DataTable({
                "ordering": false,  // Disable client-side sorting
                "iDisplayLength": 100,  // Set the default number of entries to 100
                "dom": 'Bfrtip', // Add buttons to the DOM
                "buttons": [
                    'copy', 'csv', 'excel', 'pdf', 'print' // Buttons for copy, CSV, Excel, PDF, and print
                ]
            });
        });
    </script>
</body>

