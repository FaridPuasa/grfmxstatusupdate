    <main class="mt-4" style="width: 100%;">
        <h1 class="text-center mt-4">List of MOH KB Orders (STD) (<%= totalRecords %>)</h1>
        <div class="container" id="pharmacyFormBox" style="display: none;">
            <form action="/createPharmacyFormSuccess" method="post" class="custom-form">
                <input type="hidden" name="mohForm" id="mohForm" value="KB">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="dateOfForm">Date of Form:</label>
                            <input type="date" class="form-control" id="dateOfForm" name="dateOfForm" required>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="batchChoice">Batch No:</label>
                            <select class="form-control" id="batchChoice" name="batchChoice" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3" id="b2StartField">
                        <div class="form-group">
                            <label for="b2Start">Next Form Number Start:</label>
                            <input type="number" class="form-control" id="b2Start" name="b2Start"
                                placeholder="Enter B2 Start">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mt-4">Create Pharmacy Form</button>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <a href="https://docs.google.com/document/d/1BZYdnMphVQDITEvY5XdneGcWqGtvmsxG/edit?usp=sharing&ouid=111753871965049759883&rtpof=true&sd=true"
                                class="btn btn-secondary mt-4" target="_blank" download>Download</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="orderTable">
                <thead class="table-primary">
                    <tr>
                        <th class="header">Tracking No.</th>
                        <th class="header">Customer Name</th>
                        <th class="header">Pharmacy Form Created</th>
                        <th class="header">Current Status</th>
                        <th class="header">Assigned To</th>
                        <th class="header">Job Date</th>
                        <th class="header">Attempt No.</th>
                        <th class="header">Warehouse Entry Date</th>
                        <th class="header">Age in Warehouse</th>
                        <th class="header">Latest Reason</th>
                        <th class="header">Last Update</th>
                        <th class="header">Last Update By</th>
                        <th class="header">Order Created</th>
                        <th class="header">Phone No.</th>
                        <th class="header">Additional Phone No.</th>
                        <th class="header">Address</th>
                        <th class="header">Area</th>
                        <th class="header">Patient No.</th>
                        <th class="header">IC/Passport No.</th>
                        <th class="header">Appointment Place</th>
                        <th class="header">Job Method</th>
                        <th class="header">Payment Method</th>
                        <th class="header">Price</th>
                        <th class="header">Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Iterate through the orders and display the data -->
                    <% orders.forEach(function(order) { %>
                        <tr>
                            <td>
                                <%= order.doTrackingNumber %>
                            </td>
                            <td>
                                <%= order.receiverName %>
                            </td>
                            <td>
                                <%= order.pharmacyFormCreated %>
                            </td>
                            <td>
                                <%= order.currentStatus %>
                            </td>
                            <td>
                                <%= order.assignedTo %>
                            </td>
                            <td>
                                <%= order.jobDate %>
                            </td>
                            <td>
                                <%= order.attempt %>
                            </td>
                            <td>
                                <%= moment(order.warehouseEntryDateTime).isValid() ?
                                    moment(order.warehouseEntryDateTime).utcOffset(8).format('DD-MM-YYYY') : "N/A" %>
                            </td>
                            <td>
                                <% if (order.currentStatus !=="Completed" ) { %>
                                    <% if (order.warehouseEntry==="No" ) { %>
                                        0
                                        <% } else { %>
                                            <% const entryDate=new Date(order.warehouseEntryDateTime); %>
                                                <% const currentDate=new Date(); %>
                                                    <% const ageInMilliseconds=currentDate - entryDate; %>
                                                        <% const ageInDays=Math.floor(ageInMilliseconds / (1000 * 60 *
                                                            60 * 24)); %>
                                                            <%= ageInDays %>
                                                                <% } %>
                                                                    <% } else { %>
                                                                        <!-- Add an empty cell or any placeholder when the status is "Completed" -->
                                                                        <!-- Adjust the colspan to match the number of columns in the table -->
                                                                        <% } %>
                            </td>
                            <td>
                                <%= order.latestReason %>
                            </td>
                            <td>
                                <%= moment(order.lastUpdateDateTime).utcOffset(8).format('DD-MM-YYYY h:mm a') %>
                            </td>
                            <td>
                                <%= order.lastUpdatedBy %>
                            </td>
                            <td>
                                <%= order.dateTimeSubmission %>
                            </td>
                            <td>
                                <%= order.receiverPhoneNumber %>
                            </td>
                            <td>
                                <%= order.additionalPhoneNumber %>
                            </td>
                            <td>
                                <%= order.receiverAddress %>
                            </td>
                            <td>
                                <%= order.area %>
                            </td>
                            <td>
                                <%= order.patientNumber %>
                            </td>
                            <td style="mso-number-format:'@'">
                                <%= order.icPassNum %>
                            </td>
                            <td>
                                <%= order.appointmentPlace %>
                            </td>
                            <td>
                                <%= order.deliveryTypeCode %>
                            </td>
                            <td>
                                <%= order.paymentMethod %>
                            </td>
                            <td>
                                <%= order.paymentAmount %>
                            </td>
                            <td>
                                <%= order.remarks %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </main>

