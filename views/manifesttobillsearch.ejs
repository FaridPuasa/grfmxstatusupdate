    <div class="container mt-5">
    <h1 class="text-center mt-4">Manifest to Bill Search</h1>
    <form action="/manifesttobillsearch" method="post">
        <div class="form-group">
            <label for="mawbNo">MAWB No.</label>
            <input type="text" id="mawbNo" name="mawbNo" class="form-control" value="<%= searchQuery.mawbNo %>">
        </div>
