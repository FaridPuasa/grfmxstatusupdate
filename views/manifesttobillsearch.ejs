    </form>
</div>

<% if (orders && orders.length > 0) { %>
    <div class="mt-4">
        <h3 class="text-center">
            <%= orders[0].product ? orders[0].product.toUpperCase() : '' %>
            <% if (orders[0].mawbNo) { %>
                <%= ' ' + orders[0].mawbNo %>
            <% } %>
            (<%= orders.length %>)
        </h3>
    </div>
<% } %>

<div id="results" class="mt-4">
    <table class="table" id="orderTable">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Tracking No.</th>
                <th>Customer Name</th>
                <th>Phone No.</th>
                <th>Address</th>
                <th>Postal Code</th>
                <th>Weight (KG)</th>
                <th>No. of Packages</th>
                <th>Handling Charge</th>
            </tr>
        </thead>
        <tbody id="results-body">
            <% if (!orders || orders.length === 0) { %>
                <tr>
                    <td colspan="10" class="text-center">No records found</td>
                </tr>
            <% } else { %>
                <% orders.forEach((order, index) => { 
                    if (!order || !order.items || order.items.length === 0) {
                        return; // Skip if order or items are undefined or empty
                    }
                    
                    let handlingCharge = '';
                    let weight = order.parcelWeight || 0;

                    if (order.product && order.product.toLowerCase().includes('mglobal')) {
                        handlingCharge = (Math.round((2.8 + 0.25 * Math.max(0, weight - 3)) * 1000) / 1000).toFixed(3);

                    } else if (order.product && order.product.toLowerCase().includes('pdu')) {
                        handlingCharge = (Math.round((2.8 + 0.25 * Math.max(0, weight - 3)) * 1000) / 1000).toFixed(3);

                    } else if (order.product && (order.product.toLowerCase().includes('ewe') || order.product.toLowerCase().includes('ewens'))) {
                        let charge2_8 = (Math.round((2.8 + 0.25 * Math.max(0, weight - 3)) * 1000) / 1000).toFixed(3);
                        let charge3_5 = (Math.round((3.5 + 0.50 * Math.max(0, weight - 3)) * 1000) / 1000).toFixed(3);

                        let firstChar = order.receiverPostalCode ? order.receiverPostalCode.charAt(0) : '';
                        if (firstChar === 'B') {
                            handlingCharge = charge2_8;
                        } else if (['K', 'T', 'P'].includes(firstChar)) {
                            handlingCharge = charge3_5;
                        } else {
                            if (order.area && order.area !== 'N/A') {
                                if (['TEMBURONG', 'KB', 'KB / SERIA', 'LUMUT', 'TUTONG'].includes(order.area)) {
                                    handlingCharge = charge3_5;
                                } else {
                                    handlingCharge = charge2_8;
                                }
                            } else {
                                handlingCharge = `${charge2_8} or ${charge3_5}`;
                            }
                        }
                    }
                %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= order.doTrackingNumber %></td>
                        <td><%= order.receiverName %></td>
                        <td><%= order.receiverPhoneNumber %></td>
                        <td><%= order.receiverAddress %></td>
                        <td><%= order.receiverPostalCode %></td>
                        <td><%= order.parcelWeight %></td>
                        <td>1</td>
                        <td><%= handlingCharge %></td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>

